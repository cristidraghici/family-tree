{
  "name": "family-tree",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:github": "npm run build -- --config ./vite.github.config.ts",
    "preview": "vite preview",
    "svgo": "npx --yes -- svgo -r ./src/assets",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --check ./src",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch=true",
    "test:coverage": "vitest --coverage --watch=false",
    "test:ui": "vitest --ui",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:test": "start-server-and-test dev http://localhost:5173 'npm run cy:run'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@picocss/pico": "^2.0.0-rc3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "react-router-dom": "^7.11.0",
    "uuid": "^9.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "cypress": "^13.7.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.4",
    "sass": "^1.70.0",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.4.5",
    "vite": "^7.3.0",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^4.0.16"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.6"
  }
}
